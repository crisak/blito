{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": ["**/.env.*local"],
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "**/.env.*local",
    "NEXT_PUBLIC_GMAPS_API_KEY",
    "NEXT_PUBLIC_BLITONER_API",
    "NEXT_PUBLIC_ENV"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "./../src/**"]
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "outputs": ["./../src/**"]
    }
  }
}
